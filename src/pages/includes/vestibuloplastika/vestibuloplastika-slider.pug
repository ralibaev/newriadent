      h1.service-slider__title Вестибулопластика, записаться на консультацию к пародонтологу
      .service-slider__img
        picture
          source(type="image/webp" media="(min-width: 768px)" srcset="img/vestibuloplastika-slider.webp")
          source(type="image/webp" srcset="img/vestibuloplastika-slider-mobile.webp")
          source(media="(min-width: 768px)"  srcset="img/vestibuloplastika-slider.png" alt="")
          img(src="img/vestibuloplastika-slider-mobile.png" alt="")
